#include<iostream>
using namespace std;

void swapp(int &a,int &b){
    int t=a;a=b;b=t;
}
void heapify(int i,int heap[]){
    while(i>0 && heap[i]<heap[(i-1)/2]){
        swapp( heap[i],heap[(i-1)/2]);
        i=(i-1)/2;
    }
}
void insert(int heap[],int &s,int v){
    heap[s]=v;
    s++;
    heapify(s-1,heap);
}

void display(int heap[],int s){
    for(int i=0;i<s;i++){
        cout<<heap[i]<<" ";
        
    }
    cout<<endl;
    }
int main(){
    int heap[10];
    int size = 0;

    insert(heap, size, 1);
    insert(heap, size, 4);
    insert(heap, size, 3);
    insert(heap, size, 5);

    cout << "aMin-Heap: ";
    display(heap, size);

    cout<<"New package: ";
    insert(heap,size,2);

    display(heap,size);
    return 0;
}
